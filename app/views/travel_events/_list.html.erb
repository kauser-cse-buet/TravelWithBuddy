<div id="filterrific_results">
	<div class="alert alert-info" role="alert">
		<%= page_entries_info travel_events%>
	</div>
	
	
	<% @travel_events.each do |travel_event| %>
	<div class="card">
		<div class="card-header">
			<div class="row">
				<div class="col-md-10">
					<h4 class="card-title"><%= link_to travel_event.name, travel_event_path(:id => travel_event.id) %></h4>

				</div>
				<div class="col-md-2">
					<div class="pull-right">
						<%= link_to 'Invite', new_invitations_path(:id => travel_event.id), class: 'btn btn-sm btn-default' %>
						<%= link_to 'Show', travel_event, class: 'btn btn-sm btn-primary'%>
					</div>
				</div>
			</div>
			<div class="row">
				<div class="col-md-12">
					<span class="label label-info">
						<span class="glyphicon glyphicon-map-marker"></span>
						<%= travel_event.travel_destination.address%>
					</span>
					<span class="label label-default ml5">
						<span class="glyphicon glyphicon-time"></span>
						Start at: <%= travel_event.start %> 	
					</span>
					<span class="label label-default ml5">
						<span class="glyphicon glyphicon-time"></span>
						Duration: <%= travel_event.duration.strftime("%H hr %M min %S sec") %>
					</span>
					<span class="label label-danger ml5">
						<span class="glyphicon glyphicon-usd"></span>
						Cost: <%= travel_event.price%>
					</span> 
				</div>
			</div>
		</div>
		<div class="card-block">
			<p class="card-text"><%= travel_event.description %></p>
			<!-- <a href="#" class="btn btn-primary">Go somewhere</a> -->
		</div>
	</div>
	<% end %>

	<div class="row mt-5 mb-5">
		<div class="col-md-6">
			<%= will_paginate travel_events %>
		</div>
	</div>
</div>
