<div class="container">
  <h2>Invitations</h2>
  <table class="table">
    <thead>
      <tr>
        <th>From</th>
        <th>Description</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.from %></td>
        <td><%= invitation.description %></td>
        <td><%= link_to 'Join', join_path(:id => invitation.travel_event_id), class: 'btn btn-sm btn-primary' %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</div>