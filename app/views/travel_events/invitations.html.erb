<p id="notice"><%= notice %></p>

<h1>Invitations</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invitations.each do |invitation| %>
      <tr>
        <td><%= invitation.from %></td>
        <td><%= invitation.description %></td>
        <td><%= link_to 'Join', join_path(:id => invitation.travel_event_id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

