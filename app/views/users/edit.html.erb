<div class="container">
	<div class="row">
		<div class="col-xs-12 col-sm-12 col-md-6 col-lg-6 col-xs-offset-0 col-sm-offset-0 col-md-offset-3 col-lg-offset-3 toppad" >


			<div class="panel panel-info">
				<div class="panel-heading">
					<h3 class="panel-title">
						<%= @user.first_name%> <%= @user.last_name%>
					</h3>
				</div>
				<div class="panel-body">
					<div class="row">
						<div class="col-md-3 col-lg-3 " align="center"> 
							<img alt="User Pic" src="http://babyinfoforyou.com/wp-content/uploads/2014/10/avatar-300x300.png" class="img-circle img-responsive"> 

							<a style="margin-top: 5px" data-original-title="Upload picture" data-toggle="tooltip" type="button" class="btn btn-sm btn-default"><i class="glyphicon glyphicon-camera"></i> Upload Picture</a>
						</div>

						<div class=" col-md-9 col-lg-9 "> 
							<table class="table table-user-information">
								<tbody>
									<%= form_for @user do |f| %>

									<tr>
										<td><%= f.label :first_name %></td>
										<td><%= f.text_field :first_name %></td>
									</tr>

									<tr>
										<td><%= f.label :last_name %></td>
										<td><%= f.text_field :last_name %></td>
									</tr>

									<tr>
										<td><%= f.label :email %></td>
										<td><%= f.text_field :email %></td>
									</tr>

									<tr>
										<td><%= f.label :address %></td>
										<td><%= f.text_field :address %></td>
									</tr>

									<tr>
										<td><%= f.label :phone %></td>
										<td><%= f.text_field :phone %></td>
									</tr>

									<tr>
										<td><%= f.submit 'Update User', class: "btn btn-sm btn-primary"%></td>
										<td><%= link_to 'Cancel', user_path(@user), class: "btn btn-sm btn-danger" %></td>
									</tr>

									<% end %>
								</tbody>
							</table>
						</div>
					</div>
				</div>

			</div>
		</div>
	</div>
</div>
